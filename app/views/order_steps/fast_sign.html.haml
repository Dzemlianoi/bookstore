%main.container.general-main-wrap
  .col-md-6
    .text-center
      %h3.in-gold-500.general-login-title= t('users.returning_customer')
      = link_to user_facebook_omniauth_authorize_path(checkout: 'true'), class: 'general-login-icon' do
        %i.fa.fa-facebook-official
      %p.general-login-text= t('general.or')
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'log-in general-form'}) do |f|
      = f.hidden_field :checkout, value: 1
      .form-group.mb-30.field
        = f.label :email, html: {:class => 'control-label input-label', 'data-bar' => t('users.privacy.enter_email')}
        = f.email_field :email, autofocus: true, id: 'email', class: 'form-control', placeholder: t('users.privacy.enter_email')
      .form-group.mb-30
        = f.label :password, html: {:class => 'control-label input-label', 'data-bar' => t('users.privacy.enter_password')}
        = f.password_field :password, autocomplete: false, class: 'form-control', placeholder: t('general.password')
      .text-center
        = f.submit t('layout.links.login'),  class: 'btn btn-default mb-20'
  .col-md-6
    .text-center
      %h3.in-gold-500.general-login-title= t('users.new_customer')
      = link_to user_facebook_omniauth_authorize_path(checkout: 'true'), class: 'general-login-icon' do
        %i.fa.fa-facebook-official
      %p.general-login-text= t('general.or')
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'sign-up general-form'}) do |f|
      .form-group.mb-30.field
        = f.hidden_field :checkout, value: 1
        = f.label :email, html: {:class => 'control-label input-label', 'data-bar' => t('users.privacy.enter_email')}
        = f.email_field :email, autofocus: true, id: 'email', class: 'form-control', placeholder: t('users.privacy.enter_email')
      .text-center
        = f.submit t('layout.links.signup'), class: 'btn btn-default mb-20'

