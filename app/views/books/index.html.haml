%main.container
  %h1.general-title-margin Ð¡atalog
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        = render 'books/catalog/sorting'
    = render 'books/catalog/by_categories_desktop'
  .dropdowns.mb-25.visible-xs
    %p.lead.small.mb-10 Sort by
    .dropdown
      = render 'books/catalog/sorting'
    %p.lead.small.mb-10 Filter by category
    = render 'books/catalog/by_categories_mobile'
  .mb-120
    - @books.in_groups_of(4, false).each_with_index  do |group, _|
      .row
        - group.each do |book|
          = render 'books/tile/book_tile', book: book
    .text-center
      = link_to 'View More', permitted_params.merge(per: next_per), class: 'btn btn-primary'
