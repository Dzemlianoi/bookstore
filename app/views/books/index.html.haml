%main.container
  %h1.general-title-margin Ð¡atalog
  .hidden-xs.clearfix
    = render 'books/catalog/sorting'
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        = link_to(books_path, class: 'filter-link') do
          All
          %span.badge.general-badge= all_books
      - categories.each do |category|
        %li.mr-35
          = link_to(category_books_path(category), class: 'filter-link') do
            = category.name
            %span.badge.general-badge
              = category.count_books
  .dropdowns.mb-25.visible-xs
    %p.lead.small.mb-10 Filter by category
    .dropdown
      %a.dropdown-toggle.lead.small{href: '#', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false'}
        Newest first
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          link_to "Newest first", params.merge(:order => "e")
        %li
          %a{href: '#'} Popular first
        %li
          %a{href: '#'} Price: Low to hight
        %li
          %a{href: '#'} Price: Low to hight
    %p.lead.small.mb-10 Sort by
    .dropdown
      %a.dropdown-toggle.lead.small{href: '#', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false'}
        Newest first
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          %a{href: '#'} Newest first
        %li
          %a{href: '#'} Popular first
        %li
          %a{href: '#'} Price: Low to hight
        %li
          %a{href: '#'} Price: Low to hight
  .mb-120
    - @books.in_groups_of(4, false).each_with_index  do |group, _|
      .row
        - group.each do |book|
          = render 'books/catalog/book_tile', book: book
    .text-center
      = link_to 'View More', permitted_params.merge(per: next_per), class: 'btn btn-primary'
