%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Log In
    %a.general-login-icon{href: '#'}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'general-form'}) do |f|
    .form-group.mb-30.field
      = f.label :email, html: {:class => 'control-label input-label', 'data-bar' => 'Enter Email'}
      = f.email_field :email, autofocus: true, id: 'email', class: 'form-control', placeholder: 'Enter Email'
    .form-group.mb-30
      = f.label :password, html: {:class => 'control-label input-label', 'data-bar' => 'Enter Password'}
      = f.password_field :password, autocomplete: false, class: 'form-control', placeholder: 'Password'
      - if devise_mapping.recoverable?
        = link_to 'Forgot password?', new_password_path(resource_name), class: 'in-gold-500'
    - if devise_mapping.rememberable?
      .form-group.checkbox.text-center.mb-30
        %label.checkbox-label
          = f.check_box :remember_me, hidden: 'true', class: 'checkbox-input'
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text Remember me
      .text-center
        = f.submit 'Sign in',  class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    Donâ€™t have an Account?
    = link_to 'Sign Up', new_user_registration_path, class: 'in-gold-500'