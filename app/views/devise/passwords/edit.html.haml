= devise_error_messages!
%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Set new password
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'general-form', method: :put }) do |f|
    = f.hidden_field :reset_password_token
    .form-group.mb-30
      = f.label :password, 'Type a new Password', class: 'control-label input-label'
      = f.password_field :password, autofocus: true, class:' form-control', autocomplete: 'off', placeholder: 'Type a new Password'
    .form-group.mb-40
      = f.label :password_confirmation, 'Confirm password', class: 'control-label input-label'
      = f.password_field :password_confirmation, class:' form-control', autocomplete: 'off', placeholder: 'Confirm Password'
    = f.submit 'Change', class: 'btn btn-default center-block mb-20'
