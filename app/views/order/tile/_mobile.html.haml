.general-cart-item.divider-lg-bottom
  = link_to order_item_path(order_item: purchase), method: :delete, class: 'close general-cart-close', data: {confirm: 'Are you sure?'}do
    %span{'aria-hidden': 'true'} &times;
  .general-img-wrap-table
    %img.cart-img-shadow{src: 'http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg', alt: 'design-book'}
  %p.title= purchase.book.name
  %table.table
    %tr
      %input.purchase-id{type: 'hidden'}= purchase.id
      %td
        %span.in-grey-600 Price
      %td
        %span.font-16.in-gold-500 €#{purchase.book.price}
    %tr
      %td.vertical-middle
        %span.in-grey-600 Quantity
      %td
        .input-group
          %a.input-link
            %i.fa.switchers.fa-minus.line-height-40
          %input.form-control.quantity-input{type: 'text', value: purchase.quantity.to_i}
          %a.input-link
            %i.fa.switchers.fa-plus.line-height-40
    %tr
      %td
        %span.in-grey-600 SubTotal
      %td
        %span.font-16.position-price.in-gold-500 €#{purchase.price_with_quantity}